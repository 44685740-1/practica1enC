#include <stdio.h>
#include <stdlib.h>

int main(void) {
	setbuf(stdout, NULL);
	char deseaContinuar;
	int contadorPasajeros;

	//inicializar
	deseaContinuar = 's';

	while(deseaContinuar == 's' && contadorPasajeros <=3){
		contadorPasajeros++;
		printf("desea continuar s/n");
		scanf("c%", &deseaContinuar);
	}

	printf("saliste");

	return 0;
}
