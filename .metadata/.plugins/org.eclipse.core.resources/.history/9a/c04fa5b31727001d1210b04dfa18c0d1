#include <stdio.h>
#include <stdlib.h>

int main(void) {
	setbuf(stdout,NULL);
	int numero;
	int i;
	int contadorPares;
	int contadorImpar;
	int maximoPar;
	int numeroMenor;
	int acumuladorPositivos;
	int factorNegativo;
	int acumuladorProductoNegativo;
	int primerPoductoNegativo;
	int contadorNumerosNegativos;



	//inicializar
	contadorPares = 0;
	contadorImpar = 0;
	acumuladorPositivos = 0;
	acumuladorProductoNegativo = 0;
	contadorNumerosNegativos = 0;


	for(i=0; i<4;i++){
		printf("ingrese un numero");
		scanf("%d", numero);
		if(numero % 2 == 0){
			contadorPares++;
			if(i==0){
				maximoPar = numero;
			} else{
				if(numero>maximoPar){
					numero = maximoPar;
				}
			}
		} else{
			contadorImpar++;
		}

		if(i==0){
			numeroMenor = numero;
		} else{
			if(numero < numeroMenor){
				numero = numeroMenor;
			}
		}

		if(numero >= 0){
			acumuladorPositivos = acumuladorPositivos + numero;
		} else{
			contadorNumerosNegativos++;
			if(i==0){
				factorNegativo = numero;
			} else{
				primerPoductoNegativo = factorNegativo * numero;
				acumuladorProductoNegativo = primerPoductoNegativo * numero;
			}

		}
	}

	printf("la cantidad de numero pares es de: %d", contadorPares);
	printf("la cantidad de numeros impares es de: %d", contadorImpar);
	printf("el menor numero ingresado es: %d", numeroMenor);
	printf("el mayor de los numeros pares es: %d", maximoPar);
	printf("la suma de los positivos es de: %d", acumuladorPositivos);

	if(contadorNumerosNegativos >= 2){
		printf("el producto de los numeros negativos es: %d", acumuladorProductoNegativo);
	} else{
		printf("solo ingresaste uno o ningun numero negativo");
	}


	return 0;
}
