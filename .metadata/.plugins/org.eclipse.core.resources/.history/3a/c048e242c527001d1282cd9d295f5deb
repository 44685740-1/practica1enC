#include <stdio.h>
#include <stdlib.h>

int main(void) {
	setbuf(stdout, NULL);

	//variables
	char deseaContinuar;
	int contadorPasajeros;

	//inicializar
	deseaContinuar  = 's';

	while(deseaContinuar == 's' && contadorPasajeros <= 3){
		contadorPasajeros++;
		printf("desea continuar (s/n) \n");
		scanf("%c", &deseaContinuar);

	}
	return 0;
}
